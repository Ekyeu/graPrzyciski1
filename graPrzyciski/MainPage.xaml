<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="graPrzyciski.MainPage">

    <ScrollView>
        <StackLayout
            Orientation="Vertical"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Podaj ile na ile (AxA) ma być plansza. Plansza musi być przynajmniej 3x3 i podana liczba musi byc NIEparzysta!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="20"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="planszaParametry"
                Placeholder="Podaj 1 liczbę"
                Keyboard="Numeric"
                WidthRequest="200"
                HorizontalOptions="Center"
                Margin="25"/>

            <Button
                x:Name="Start"
                Text="Stwórz grę!"
                Clicked="GraTworz"
                HorizontalOptions="Center" />

            <Label
                Text=""
                x:Name="errorHandler"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="20"
                HorizontalOptions="Center" />

        </StackLayout>
    </ScrollView>

</ContentPage>
